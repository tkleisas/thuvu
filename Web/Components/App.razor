<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>T.H.U.V.U. - AI Coding Agent</title>
    <base href="/" />
    <link rel="stylesheet" href="css/app.css" />
    <HeadOutlet @rendermode="RenderMode.InteractiveServer" />
</head>
<body>
    <Routes @rendermode="RenderMode.InteractiveServer" />
    <script src="_framework/blazor.server.js" autostart="false"></script>
    <script>
        Blazor.start({
            configureSignalR: function (builder) {
                let c = builder.build();
                c.serverTimeoutInMilliseconds = 600000;  // 10 minutes
                c.keepAliveIntervalInMilliseconds = 30000; // 30 seconds
                builder.build = () => c;
            }
        });
    </script>
    <script src="js/thuvu.js?v=5"></script>
</body>
</html>
