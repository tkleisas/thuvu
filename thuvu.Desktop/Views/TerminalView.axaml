             xmlns:vm="using:thuvu.Desktop.ViewModels"
             xmlns:terminal="using:Iciclecreek.Terminal"
             x:Class="thuvu.Desktop.Views.TerminalView"
             x:DataType="vm:TerminalViewModel">

    <terminal:TerminalControl x:Name="Terminal"
                              FontFamily="Cascadia Mono, Cascadia Code, Consolas, Courier New"
                              FontSize="14"
                              BufferSize="5000" />
