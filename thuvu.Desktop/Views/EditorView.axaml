<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:thuvu.Desktop.ViewModels"
             xmlns:AvaloniaEdit="using:AvaloniaEdit"
             xmlns:i="using:Avalonia.Xaml.Interactivity"
             xmlns:behaviors="using:thuvu.Desktop.Behaviors"
             x:Class="thuvu.Desktop.Views.EditorView"
             x:DataType="vm:EditorViewModel">

    <AvaloniaEdit:TextEditor Name="Editor"
                              ShowLineNumbers="True"
                              FontFamily="Cascadia Code, Consolas, Courier New"
                              FontSize="13">
        <i:Interaction.Behaviors>
            <behaviors:DocumentTextBindingBehavior Text="{ReflectionBinding Content, Mode=TwoWay}" />
        </i:Interaction.Behaviors>
    </AvaloniaEdit:TextEditor>
</UserControl>
