<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:thuvu.Desktop.ViewModels"
             xmlns:views="clr-namespace:thuvu.Desktop.Views"
             x:Class="thuvu.Desktop.Views.FileTreeView"
             x:DataType="vm:FileTreeViewModel">

    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Margin="4">
            <Button DockPanel.Dock="Right" Content="ðŸ”„" Command="{Binding RefreshCommand}"
                    ToolTip.Tip="Refresh" Padding="4" />
            <TextBlock Text="ðŸ“ Workspace" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="12" />
        </DockPanel>

        <TreeView Name="FileTree" ItemsSource="{Binding RootNodes}" Padding="4"
                  DoubleTapped="FileTree_DoubleTapped">
            <TreeView.Styles>
                <Style Selector="TreeViewItem">
                    <Setter Property="IsExpanded" Value="{ReflectionBinding IsExpanded, Mode=TwoWay}" />
                </Style>
            </TreeView.Styles>
            <TreeView.ItemTemplate>
                <TreeDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="{Binding IsDirectory, Converter={x:Static views:FileTreeView.FolderIconConverter}}"
                                   FontSize="12" />
                        <TextBlock Text="{Binding Name}" FontSize="12" />
                    </StackPanel>
                </TreeDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</UserControl>
