<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:thuvu.Desktop.ViewModels"
             xmlns:views="clr-namespace:thuvu.Desktop.Views"
             x:Class="thuvu.Desktop.Views.DiffView"
             x:DataType="vm:DiffViewerViewModel">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Padding="8,4" Background="#1A000000">
            <DockPanel>
                <TextBlock DockPanel.Dock="Left" Text="{Binding FileName}" FontWeight="SemiBold" FontSize="12" />
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="{Binding Additions, StringFormat='+{0}'}" Foreground="Green" FontSize="11" />
                    <TextBlock Text="{Binding Deletions, StringFormat='-{0}'}" Foreground="Red" FontSize="11" />
                </StackPanel>
                <Panel />
            </DockPanel>
        </Border>

        <!-- Diff Content -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DiffContent, Converter={x:Static views:DiffView.DiffLinesConverter}}"
                          Padding="4">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="views:DiffLine">
                        <TextBlock Text="{Binding Text}"
                                   Background="{Binding Background}"
                                   FontFamily="Cascadia Code, Consolas, Courier New"
                                   FontSize="12" Padding="4,1" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
