<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:thuvu.Desktop.ViewModels"
             xmlns:views="clr-namespace:thuvu.Desktop.Views"
             xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
             x:Class="thuvu.Desktop.Views.ChatView"
             x:DataType="vm:ChatViewModel">

    <UserControl.Styles>
        <!-- Pulsing animation for streaming indicator -->
        <Style Selector="Border.streaming-dot">
            <Style.Animations>
                <Animation Duration="0:0:1" IterationCount="INFINITE">
                    <KeyFrame Cue="0%"><Setter Property="Opacity" Value="0.3" /></KeyFrame>
                    <KeyFrame Cue="50%"><Setter Property="Opacity" Value="1.0" /></KeyFrame>
                    <KeyFrame Cue="100%"><Setter Property="Opacity" Value="0.3" /></KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <DockPanel>
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Padding="6,4" BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource SystemBaseMediumColor}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                    <!-- Context usage indicator -->
                    <Border IsVisible="{Binding ContextUsageText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                            Background="#20808080" CornerRadius="4" Padding="6,2" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6">
                            <Border Width="80" Height="8" CornerRadius="4" Background="#30FFFFFF"
                                    VerticalAlignment="Center" ClipToBounds="True">
                                <Border HorizontalAlignment="Left" Height="8" CornerRadius="4"
                                        Width="{Binding ContextUsagePercent, Converter={x:Static views:ChatView.PercentToWidthConverter}}">
                                    <Border.Background>
                                        <MultiBinding Converter="{x:Static views:ChatView.PercentToColorConverter}">
                                            <Binding Path="ContextUsagePercent" />
                                        </MultiBinding>
                                    </Border.Background>
                                </Border>
                            </Border>
                            <TextBlock Text="{Binding ContextUsageText}" FontSize="10"
                                       Foreground="Gray" VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border IsVisible="{Binding IsProcessing}" Background="#40FF8800"
                            CornerRadius="4" Padding="8,2">
                        <TextBlock Text="â³ Processing..." FontSize="11" VerticalAlignment="Center" />
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="Model:" FontSize="12" VerticalAlignment="Center" Foreground="Gray" />
                    <ComboBox ItemsSource="{ReflectionBinding AvailableModels}"
                             SelectedItem="{ReflectionBinding SelectedModel}"
                             IsEditable="True"
                             MinWidth="200" MaxWidth="400" Padding="6,3"
                             FontSize="12" VerticalAlignment="Center"
                             PlaceholderText="Select model..." />
                    <Button Content="ðŸ”„" ToolTip.Tip="Refresh model list"
                            FontSize="12" Padding="4,2" VerticalAlignment="Center"
                            Click="OnRefreshModelsClick" />
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Input Area -->
        <Border DockPanel.Dock="Bottom" Padding="8" BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource SystemBaseMediumColor}">
            <Panel>
                <!-- Slash command autocomplete popup -->
                <Popup x:Name="CommandPopup" PlacementTarget="{Binding #InputBox}"
                       Placement="Top" IsOpen="False" MaxHeight="250" MinWidth="300"
                       IsLightDismissEnabled="True">
                    <Border Background="{DynamicResource SystemChromeMediumColor}"
                            BorderBrush="{DynamicResource SystemBaseMediumColor}"
                            BorderThickness="1" CornerRadius="6" Padding="4">
                        <ListBox x:Name="CommandList" MaxHeight="230"
                                 SelectionMode="Single" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="4,2">
                                        <TextBlock DockPanel.Dock="Left" Text="{ReflectionBinding Icon}" FontSize="14"
                                                   VerticalAlignment="Center" Margin="0,0,8,0" />
                                        <StackPanel>
                                            <TextBlock Text="{ReflectionBinding Command}" FontWeight="SemiBold" FontSize="12" />
                                            <TextBlock Text="{ReflectionBinding Description}" FontSize="10" Foreground="Gray" />
                                        </StackPanel>
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>

                <!-- File autocomplete popup (@) -->
                <Popup x:Name="FilePopup" PlacementTarget="{Binding #InputBox}"
                       Placement="Top" IsOpen="False" MaxHeight="300" MinWidth="350"
                       IsLightDismissEnabled="True">
                    <Border Background="{DynamicResource SystemChromeMediumColor}"
                            BorderBrush="{DynamicResource SystemBaseMediumColor}"
                            BorderThickness="1" CornerRadius="6" Padding="4">
                        <ListBox x:Name="FileList" MaxHeight="280"
                                 SelectionMode="Single" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <DockPanel Margin="4,2">
                                        <TextBlock DockPanel.Dock="Left" Text="{ReflectionBinding Icon}" FontSize="14"
                                                   VerticalAlignment="Center" Margin="0,0,8,0" />
                                        <TextBlock Text="{ReflectionBinding RelativePath}" FontSize="12"
                                                   VerticalAlignment="Center" />
                                    </DockPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>

                <DockPanel>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" Spacing="4" VerticalAlignment="Bottom">
                        <Button Content="ðŸ“Ž" ToolTip.Tip="Attach image" FontSize="14"
                                Padding="8,6" VerticalAlignment="Bottom"
                                Click="OnAttachImageClick" />
                        <Button Content="Send" Command="{Binding SendMessageCommand}"
                                Classes="accent" Padding="16,8" />
                        <Button Content="Cancel" Command="{Binding CancelRequestCommand}"
                                IsVisible="{Binding IsProcessing}" Padding="16,8" />
                    </StackPanel>
                    <StackPanel>
                        <!-- Pending image preview strip -->
                        <ItemsControl ItemsSource="{ReflectionBinding PendingImages}"
                                      IsVisible="{ReflectionBinding HasPendingImages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,0,0,6" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" ClipToBounds="True"
                                            BorderBrush="{DynamicResource SystemBaseMediumColor}"
                                            BorderThickness="1" Padding="2" MaxHeight="90">
                                        <Panel>
                                            <Image Source="{ReflectionBinding Thumbnail}" MaxHeight="80"
                                                   MaxWidth="120" Stretch="Uniform" />
                                            <Button Content="âœ•" FontSize="10" Padding="3,1"
                                                    HorizontalAlignment="Right" VerticalAlignment="Top"
                                                    Click="OnRemovePendingImage" />
                                        </Panel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBox Name="InputBox"
                                 Text="{Binding InputText}"
                                 Watermark="Type a message, /command, or @file... (Enter to send, Shift+Enter for newline, Ctrl+V to paste image)"
                                 AcceptsReturn="True"
                                 MinHeight="60" MaxHeight="150"
                                 TextWrapping="Wrap" />
                    </StackPanel>
                </DockPanel>
            </Panel>
        </Border>

        <!-- Messages Area -->
        <ScrollViewer x:Name="MessagesScroller" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Messages}" Padding="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm:ChatMessageViewModel">
                        <Border Margin="0,4" Padding="12,8" CornerRadius="8"
                                Background="{Binding Role, Converter={x:Static views:ChatView.RoleBrushConverter}}"
                                DoubleTapped="OnMessageDoubleTapped">
                            <StackPanel Spacing="4">
                                <DockPanel>
                                    <TextBlock DockPanel.Dock="Left"
                                               Text="{Binding Role}" FontWeight="Bold" FontSize="11"
                                               Foreground="{DynamicResource SystemBaseHighColor}" />
                                    <TextBlock DockPanel.Dock="Right"
                                               Text="{Binding Timestamp}" FontSize="10"
                                               Foreground="Gray" HorizontalAlignment="Right" />
                                    <Panel />
                                </DockPanel>

                                <!-- Thinking/reasoning content (collapsible) -->
                                <Expander IsVisible="{Binding ThinkingContent, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                          Header="ðŸ’­ Thinking..." Padding="0" Margin="0,2,0,4"
                                          IsExpanded="{Binding ShowThinking}">
                                    <Border Background="#15FFFFFF" CornerRadius="4" Padding="8" MaxHeight="200">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <SelectableTextBlock Text="{Binding ThinkingContent}" TextWrapping="Wrap"
                                                                 FontSize="11" Foreground="Gray" FontStyle="Italic" />
                                        </ScrollViewer>
                                    </Border>
                                </Expander>

                                <!-- Markdown for assistant messages (shown after streaming completes) -->
                                <md:MarkdownScrollViewer Markdown="{Binding Content}"
                                    MarkdownStyleName="FluentTheme"
                                    IsVisible="{Binding ShowMarkdown}"
                                    Loaded="OnMarkdownLoaded"
                                    SaveScrollValueWhenContentUpdated="False" />

                                <!-- Plain text while streaming OR as fallback when markdown rendering fails -->
                                <SelectableTextBlock Text="{Binding Content}" TextWrapping="Wrap"
                                    IsVisible="{Binding ShowPlainText}" />

                                <!-- Plain text for user/tool messages -->
                                <SelectableTextBlock Text="{Binding Content}" TextWrapping="Wrap"
                                    IsVisible="{Binding Role, Converter={x:Static views:ChatView.IsNotAssistantConverter}}" />

                                <!-- Attached images in user messages -->
                                <ItemsControl ItemsSource="{ReflectionBinding Images}"
                                              IsVisible="{ReflectionBinding HasImages}"
                                              Margin="0,4,0,0">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="6" ClipToBounds="True" Margin="0,0,6,6"
                                                    BorderBrush="{DynamicResource SystemBaseMediumColor}"
                                                    BorderThickness="1">
                                                <Image Source="{ReflectionBinding Thumbnail}" MaxHeight="150"
                                                       MaxWidth="250" Stretch="Uniform" />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Streaming indicator (pulsing dots) -->
                                <StackPanel Orientation="Horizontal" Spacing="4" Margin="0,4,0,0"
                                            IsVisible="{Binding IsStreaming}">
                                    <Border Classes="streaming-dot" Width="6" Height="6" CornerRadius="3" Background="#FF8800" />
                                    <Border Classes="streaming-dot" Width="6" Height="6" CornerRadius="3" Background="#FF8800" Opacity="0.6" />
                                    <Border Classes="streaming-dot" Width="6" Height="6" CornerRadius="3" Background="#FF8800" Opacity="0.3" />
                                    <TextBlock Text="Generating..." FontSize="10" Foreground="Gray"
                                               VerticalAlignment="Center" Margin="4,0,0,0" />
                                </StackPanel>

                                <!-- Tool info -->
                                <Border IsVisible="{Binding ToolName, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                        Background="#1A000000" CornerRadius="4" Padding="8" Margin="0,4,0,0">
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="{Binding ToolName, StringFormat='ðŸ”§ {0}'}" FontWeight="SemiBold" FontSize="11" />
                                        <TextBlock Text="{Binding ToolResult}" FontSize="11" Foreground="Gray"
                                                   MaxLines="5" TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>
